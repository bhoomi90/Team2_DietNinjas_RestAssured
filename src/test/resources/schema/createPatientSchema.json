{
  "$schema": "http://json-schema.org/draft-07/schema#",	
  "type": "object",
  "required": [
    "patientId", "FirstName", "LastName", "ContactNumber", "Email", "Allergy",
    "FoodPreference", "CuisineCategory", "FileMorbidity", "FileMorbidityCondition",
    "DateOfBirth", "DieticianId", "Vitals", "LastVisitDate"
  ],
  "properties": {
    "patientId": { "type": "integer" },
    "FirstName": { "type": "string" },
    "LastName": { "type": "string" },
    "ContactNumber": { "type": "string" },
    "Email": { "type": "string", "format": "email" },
    "Allergy": { "type": "string" },
    "FoodPreference": { "type": "string" },
    "CuisineCategory": { "type": "string" },
    "FileMorbidity": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "T3": { "type": "string" },
          "T4": { "type": "string" },
          "TSH": { "type": "string" }
        }   
      }
    },
    "FileMorbidityCondition": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "DateOfBirth": { "type": "string", "format": "date" },
    "DieticianId": { "type": "integer" },
    "Vitals": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["Weight", "Height", "Temperature", "SP", "DP"],
        "properties": {
          "Weight": { "type": "number" },
          "Height": { "type": "number" },
          "Temperature": { "type": "number" },
          "SP": { "type": "integer" },
          "DP": { "type": "integer" }
        }        
      }
    },
    "LastVisitDate": { "type": "string", "format": "date-time" }
  }
}